{
  "manifest_version": 3,
  "name": "Leads generation",
  "version": "1.0",
  "description": "Generate leads",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://localhost/*",
    "http://localhost/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube_functions_helper.js", "youtube_functions.js", "youtube_view.js", "apis.js", "constants.js", "content.js", "helper.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
